<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/body_backcolor"
    android:orientation="vertical" >

    <include layout="@layout/title_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height1"
        android:layout_marginTop="@dimen/layout_margin_top1"
        android:background="@drawable/signup_location_input_bg" >

        <EditText
            android:id="@+id/et_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/text_margin_left1"
            android:background="@drawable/signup_location_input_bg"
            android:singleLine="true"
            android:textColor="@color/text_color2"
            android:textSize="@dimen/text_size2" />
    </RelativeLayout>

</LinearLayout>