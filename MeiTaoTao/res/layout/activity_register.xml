<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/body_backcolor"
    android:orientation="vertical" >
	<include layout="@layout/title_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="16dip"
        android:background="@drawable/signup_signup_btn_bg"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_user"
            android:layout_width="0dp"
            android:layout_height="42dip"
            android:layout_weight="1"
            android:background="@drawable/signup_signup_btn_bg_pressed_left"
            android:gravity="center"
            android:text="@string/l_am_user"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size2" />

        <TextView
            android:id="@+id/tv_barber"
            android:layout_width="0dp"
            android:layout_height="42dip"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="0dp"
            android:text="@string/l_am_barber"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/text_size2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="23dip"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="68dip"
            android:scaleType="centerInside"
            android:layout_height="match_parent"
            android:background="@drawable/signup_signup_ico_bg"
            android:src="@drawable/signup_signup_ico_uesr" />

        <EditText
            android:id="@+id/et_phoneNum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/signup_signup_text_bg"
            android:hint="@string/hint_phone"
            android:inputType="phone"
            android:paddingLeft="@dimen/text_margin_left4"
            android:singleLine="true"
            android:textColor="@color/hint_textcolor"
            android:textSize="@dimen/text_size2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="23dip"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="68dip"
            android:scaleType="centerInside"
            android:layout_height="match_parent"
            android:background="@drawable/signup_signup_ico_bg"
            android:src="@drawable/signup_signup_ico_check" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/signup_signup_text_bg" >

            <EditText
                android:id="@+id/et_identifyCode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/signup_signup_text_bg"
                android:hint="@string/hint_validate"
                android:inputType="number"
                android:text="666666"
                android:paddingLeft="@dimen/text_margin_left4"
                android:singleLine="true"
                android:textColor="@color/hint_textcolor"
                android:textSize="@dimen/text_size2" />

            <TextView
                android:id="@+id/tv_gain_identifyCode"
                android:layout_width="wrap_content"
                android:layout_height="40dip"
                android:paddingLeft="15dip"
                android:paddingRight="15dip"
                android:background="@drawable/signup_signup_btn_check_bg"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size2"
                android:text="@string/gain_identify" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="23dip"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="68dip"
            android:scaleType="centerInside"
            android:layout_height="match_parent"
            android:background="@drawable/signup_signup_ico_bg"
            android:src="@drawable/signup_signup_ico_check" />

        <EditText
            android:id="@+id/et_inviteCode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/signup_signup_text_bg"
            android:hint="@string/hint_invite"
            android:inputType="text"
            android:paddingLeft="@dimen/text_margin_left4"
            android:singleLine="true"
            android:textColor="@color/hint_textcolor"
            android:textSize="@dimen/text_size2" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dip"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/signup_btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/signup_signup_next_bg"
            android:text="@string/btn_next"
            android:textColor="@color/hint_textcolor"
            android:textSize="17sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/signup_btn_next"
            android:background="@color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dip"
        android:gravity="center_horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_next_for_agree"
                android:textColor="@color/hint_textcolor"
                android:textSize="@dimen/text_size2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/service_protocol"
                android:textColor="@color/text_link"
                android:textSize="13.5sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>