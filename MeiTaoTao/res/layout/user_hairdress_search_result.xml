<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/body_backcolor"
    android:orientation="vertical" >

    <include layout="@layout/title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@drawable/signup_location_input_bg"
        android:paddingBottom="10dp" >

        <Spinner
            style="@style/spinner_style"
            android:entries="@array/spinner_level"
            android:gravity="center"
            android:spinnerMode="dropdown" />

        <Spinner
            style="@style/spinner_style"
            android:entries="@array/spinner_price"
            android:gravity="center"
            android:spinnerMode="dropdown" />

        <Spinner
            style="@style/spinner_style"
            android:entries="@array/spinner_finishNum"
            android:gravity="center"
            android:spinnerMode="dropdown" />
    </LinearLayout>
    <!-- listview1的item开始 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/hairdressing_hairdressing_bg1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height3"
            android:layout_marginTop="@dimen/layout_margin_top2"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/image_width"
                android:layout_height="@dimen/image_height"
                android:layout_marginLeft="@dimen/image_margin_left4"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_launcher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/layout_margin_left1"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="17dp" >

                            <TextView
                                android:layout_width="77dp"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:gravity="center_vertical"
                                android:text="allen"
                                android:textColor="@color/background_color1"
                                android:textSize="@dimen/text_size5" />

                            <TextView
                                style="@style/blue_text_style"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/text_margin_left5"
                                android:text="首肯店" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/layout_margin_top4" >

                            <TextView
                                android:layout_width="77dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:text="@string/level_high"
                                android:textColor="@color/background_color1"
                                android:textSize="@dimen/text_size2" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/text_margin_left5"
                                android:gravity="center_vertical"
                                android:text="@string/finish"
                                android:textColor="@color/background_color1"
                                android:textSize="@dimen/text_size2" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:text="22"
                                android:textColor="@color/text_color5"
                                android:textSize="@dimen/text_size5" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:text="@string/num"
                                android:textColor="@color/background_color1"
                                android:textSize="@dimen/text_size2" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/bespeak"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/schedule_addprice_btn_add"
                        android:gravity="center"
                        android:text="@string/bespeak_hint"
                        android:textColor="@color/titile_barcolor"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/layout_margin_top5"
                    android:layout_marginTop="@dimen/layout_margin_top4"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/technology"
                        android:textColor="@color/background_color1"
                        android:textSize="@dimen/text_size3" />

                    <RatingBar
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:isIndicator="true"
                        android:numStars="4"
                        android:progress="2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_margin_left7"
                        android:gravity="center_vertical"
                        android:text="@string/time_keep"
                        android:textColor="@color/background_color1"
                        android:textSize="@dimen/text_size3" />

                    <RatingBar
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:isIndicator="true"
                        android:numStars="4"
                        android:stepSize="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_margin_left7"
                        android:gravity="center_vertical"
                        android:text="@string/attitude"
                        android:textColor="@color/background_color1"
                        android:textSize="@dimen/text_size3" />

                    <RatingBar
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:isIndicator="true"
                        android:numStars="4"
                        android:stepSize="1" />
                </LinearLayout>

                <include layout="@layout/line_horizontal" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="@string/new_opus"
                android:textColor="@color/background_color1"
                android:textSize="@dimen/text_size2" />

            <ImageView
                android:id="@+id/main_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_launcher" />
        </LinearLayout>
    </LinearLayout>
    <!-- 一个listview的item结束 -->

</LinearLayout>