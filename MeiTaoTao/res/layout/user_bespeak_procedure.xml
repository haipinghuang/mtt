<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/body_backcolor"
    android:orientation="vertical" >

    <include layout="@layout/title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height3"
        android:layout_marginTop="12dp"
        android:background="@drawable/hairdressing_hairdressing_bg1"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="@dimen/image_width"
            android:layout_height="@dimen/image_height"
            android:layout_marginLeft="@dimen/image_margin_left4"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/layout_margin_left1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="17dp" >

                        <TextView
                            android:layout_width="77dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical"
                            android:text="allen"
                            android:textColor="@color/background_color1"
                            android:textSize="@dimen/text_size5" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/layout_margin_top4" >

                        <TextView
                            android:layout_width="77dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="@string/level_high"
                            android:textColor="@color/background_color1"
                            android:textSize="@dimen/text_size2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/text_margin_left5"
                            android:gravity="center_vertical"
                            android:text="@string/finish"
                            android:textColor="@color/background_color1"
                            android:textSize="@dimen/text_size2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="22"
                            android:textColor="@color/text_color5"
                            android:textSize="@dimen/text_size5" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="@string/num"
                            android:textColor="@color/background_color1"
                            android:textSize="@dimen/text_size2" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/layout_margin_top5"
                android:layout_marginTop="@dimen/layout_margin_top4"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/technology"
                    android:textColor="@color/background_color1"
                    android:textSize="@dimen/text_size3" />

                <RatingBar
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:numStars="4"
                    android:progress="2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_margin_left7"
                    android:gravity="center_vertical"
                    android:text="@string/time_keep"
                    android:textColor="@color/background_color1"
                    android:textSize="@dimen/text_size3" />

                <RatingBar
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:numStars="4"
                    android:stepSize="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_margin_left7"
                    android:gravity="center_vertical"
                    android:text="@string/attitude"
                    android:textColor="@color/background_color1"
                    android:textSize="@dimen/text_size3" />

                <RatingBar
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:numStars="4"
                    android:stepSize="1" />
            </LinearLayout>

            <include layout="@layout/line_horizontal" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/hairdress_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height1"
        android:layout_marginTop="@dimen/layout_margin_top1"
        android:background="@drawable/signup_location_bg"
        android:gravity="center_vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/image_margin_left1"
                android:src="@drawable/my_home_ico_goodat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_margin_left2"
                android:text="@string/hairdress_type"
                android:textColor="@color/text_color2"
                android:textSize="@dimen/text_size2" />

            <TextView
                style="@style/blue_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_margin_left8"
                android:text="##染发##烫发" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/image_margin_right1"
            android:src="@drawable/signup_location_arrow2" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/select_hairdress_shop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height1"
        android:layout_marginTop="@dimen/layout_margin_top2"
        android:background="@drawable/signup_location_bg"
        android:gravity="center_vertical"
        android:onClick="onClick" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/image_margin_left1"
                android:src="@drawable/schedule_ico_store" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_margin_left2"
                android:text="@string/select_hairdress_shop"
                android:textColor="@color/text_color2"
                android:textSize="@dimen/text_size2" />

            <TextView
                style="@style/blue_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_margin_left8"
                android:text="南山海岸城首肯店" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/image_margin_right1"
            android:src="@drawable/signup_location_arrow2" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bespeak_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height1"
        android:layout_marginTop="@dimen/layout_margin_top2"
        android:background="@drawable/signup_location_bg"
        android:gravity="center_vertical"
        android:onClick="onClick" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/image_margin_left1"
                android:src="@drawable/signup_location_ico1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_margin_left2"
                android:text="@string/bespeak_time"
                android:textColor="@color/text_color2"
                android:textSize="@dimen/text_size2" />

            <TextView
                style="@style/blue_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_margin_left8"
                android:text="2014-08-09 08:00" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/image_margin_right1"
            android:src="@drawable/signup_location_arrow2" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height1"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/text_margin_bottom"
            android:layout_marginLeft="@dimen/text_margin_left9"
            android:layout_marginRight="@dimen/text_margin_left9"
            android:background="@drawable/signup_signup_btn_check_bg"
            android:gravity="center"
            android:text="@string/sure" />
    </RelativeLayout>

</LinearLayout>