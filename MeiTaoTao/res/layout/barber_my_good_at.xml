<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/body_backcolor"
    android:orientation="vertical" >

    <include layout="@layout/title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            style="@style/hint_text_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="@dimen/text_margin_left1"
            android:layout_marginRight="@dimen/text_margin_left1"
            android:layout_marginTop="12dp"
            android:text="@string/hint_goodat" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/signup_location_bg"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="18dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/form_left_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/my_goodat" />

                <TextView
                    style="@style/hint_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/click_select" />
            </LinearLayout>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_margin_left2"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <RadioButton
                        style="@style/RadioButton"
                        android:background="@drawable/schedule_setprice_btn_choose"
                        android:text="@string/hairdress1" />

                    <RadioButton
                        style="@style/RadioButton"
                        android:background="@drawable/schedule_setprice_btn_choose"
                        android:text="@string/hairdress2" />

                    <RadioButton
                        style="@style/RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hairdress9" />

                    <RadioButton
                        style="@style/RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hairdress10" />

                    <RadioButton
                        style="@style/RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hairdress11" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <RadioButton
                        style="@style/RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hairdress9" />

                    <RadioButton
                        style="@style/RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hairdress10" />

                    <RadioButton
                        style="@style/RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hairdress11" />
                </LinearLayout>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/signup_location_bg"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="18dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/form_left_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/receive_honour" />
            </LinearLayout>

            <EditText
                style="@style/hint_text_style"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/my_goodat_btn"
                android:gravity="left|top"
                android:hint="@string/hint_receive_honour"
                android:padding="7dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="18dp"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    style="@style/form_left_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/honour_photo" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <!-- 作为添加删除图片的gridView的item -->

                <FrameLayout
                    android:id="@+id/gridView_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:id="@+id/main_image"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_launcher" />

                    <ImageView
                        android:id="@+id/delete_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="top|right"
                        android:src="@drawable/my_goodat_btn_cancel" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/gridView_item2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:id="@+id/main_image2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/my_goodat_btn_add" />

                    <ImageView
                        android:id="@+id/delete_icon2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="top|right"
                        android:src="@drawable/my_goodat_btn_cancel" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_height1"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/text_margin_bottom"
                android:layout_marginLeft="@dimen/text_margin_left9"
                android:layout_marginRight="@dimen/text_margin_left9"
                android:background="@drawable/signup_signup_btn_check_bg"
                android:gravity="center"
                android:text="@string/sure" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>