<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/image_margin_right2"
        android:layout_marginRight="@dimen/image_margin_right2"
        android:background="@drawable/signup_complete_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_margin_top1"
            android:gravity="center"
            android:text="@string/reminder_title"
            android:textColor="@color/text_color4"
            android:textSize="@dimen/text_size1" />

        <TextView
            android:id="@+id/dialog_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="@dimen/text_margin_top3"
            android:paddingLeft="@dimen/text_margin_left3"
            android:paddingRight="@dimen/text_margin_right1"
            android:text="@string/reminder_msg"
            android:textColor="@color/text_color1"
            android:textSize="@dimen/text_size2" />

        <include layout="@layout/line_horizontal" />

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height4"
            android:gravity="center"
            android:text="@string/sure"
            android:textColor="@color/text_color5"
            android:textSize="@dimen/text_size1" />

        <LinearLayout
            android:id="@+id/sure_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height4"
            android:visibility="gone" >

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/text_color5"
                android:textSize="@dimen/text_size1" />

            <include layout="@layout/line_vertical" />

            <TextView
                android:id="@+id/tv_sure2"
                android:layout_width="0dp"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/sure"
                android:textColor="@color/text_color5"
                android:textSize="@dimen/text_size1" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>