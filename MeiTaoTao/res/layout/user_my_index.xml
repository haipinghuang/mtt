<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/body_backcolor"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/layout_height7"
        android:background="@drawable/my_home_pic_bg"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            style="@style/white_text_style"
            android:text="谢文东" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/btn_show_myself"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/show_myself_num"
                    style="@style/white_text_style"
                    android:text="11" />

                <TextView
                    android:id="@+id/opus"
                    style="@style/white_text_style"
                    android:layout_marginTop="3dp"
                    android:text="@string/show_myself" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_attention"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/attention_num"
                    style="@style/white_text_style"
                    android:text="11" />

                <TextView
                    android:id="@+id/attention"
                    style="@style/white_text_style"
                    android:layout_marginTop="3dp"
                    android:text="@string/attention" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/message_num"
                    style="@style/white_text_style"
                    android:text="11" />

                <TextView
                    style="@style/white_text_style"
                    android:layout_marginTop="3dp"
                    android:text="@string/message" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <ScrollView style="@style/scrollbar_style" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/order"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height1"
                android:background="@drawable/signup_location_bg"
                android:gravity="center_vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/image_margin_left1"
                        android:src="@drawable/my_home_ico_booklist" />

                    <RelativeLayout
                        android:layout_width="70dp"
                        android:layout_height="wrap_content" >

                        <TextView
                            style="@style/form_left_text_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/text_margin_left2"
                            android:text="@string/order" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:src="@drawable/my_home_ico_new" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ask_for_be_barber"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height1"
                android:layout_marginTop="@dimen/layout_margin_top2"
                android:background="@drawable/signup_location_bg"
                android:gravity="center_vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/image_margin_left1"
                        android:src="@drawable/tab_ico_cut_pressed" />

                    <TextView
                        style="@style/form_left_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_margin_left2"
                        android:text="@string/ask_for_be_barber" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/phoneNo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height1"
                android:layout_marginTop="@dimen/layout_margin_top3"
                android:background="@drawable/signup_location_bg"
                android:gravity="center_vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/image_margin_left1"
                        android:src="@drawable/my_home_ico_phone" />

                    <TextView
                        style="@style/form_left_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_margin_left2"
                        android:text="@string/phoneNum" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/share"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height1"
                android:layout_marginTop="@dimen/layout_margin_top2"
                android:background="@drawable/signup_location_bg"
                android:gravity="center_vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/image_margin_left1"
                        android:src="@drawable/my_home_ico_share" />

                    <TextView
                        style="@style/form_left_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_margin_left2"
                        android:text="@string/share" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/kefu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height1"
                android:layout_marginTop="@dimen/layout_margin_top3"
                android:background="@drawable/signup_location_bg"
                android:gravity="center_vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/image_margin_left1"
                        android:src="@drawable/my_home_ico_service" />

                    <TextView
                        style="@style/form_left_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_margin_left2"
                        android:text="@string/kefu" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/about"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height1"
                android:layout_marginTop="@dimen/layout_margin_top2"
                android:background="@drawable/signup_location_bg"
                android:gravity="center_vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/image_margin_left1"
                        android:src="@drawable/my_home_ico_information" />

                    <TextView
                        style="@style/form_left_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_margin_left2"
                        android:text="@string/about" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/exit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height1"
                android:layout_marginTop="@dimen/layout_margin_top2"
                android:background="@drawable/signup_location_bg"
                android:gravity="center_vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/image_margin_left1"
                        android:src="@drawable/my_home_ico_level" />

                    <TextView
                        style="@style/form_left_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_margin_left2"
                        android:text="@string/exit" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>