<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/body_backcolor"
    android:orientation="vertical" >

    <include layout="@layout/title_bar" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:src="@drawable/logo" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height1"
        android:layout_marginLeft="@dimen/text_margin_left2"
        android:layout_marginRight="@dimen/text_margin_right2"
        android:background="@drawable/text_bg"
        android:hint="@string/hint_phone"
        android:inputType="phone"
        android:paddingLeft="@dimen/text_margin_left4"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size2" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height1"
        android:layout_marginLeft="@dimen/text_margin_left2"
        android:layout_marginRight="@dimen/text_margin_right2"
        android:layout_marginTop="@dimen/text_margin_top1"
        android:background="@drawable/text_bg"
        android:hint="@string/hint_password"
        android:inputType="textPassword"
        android:paddingLeft="@dimen/text_margin_left4"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size2" />

</LinearLayout>